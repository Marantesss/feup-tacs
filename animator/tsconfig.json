{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "jsx": "preserve",
    "strictFunctionTypes": true,
    "sourceMap": true,
    "outDir": "dist/",
    "experimentalDecorators": true, // add support for decorators
    "esModuleInterop": true, // add support for 'import' and 'module'
    "resolveJsonModule": true // add support for json files import
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
